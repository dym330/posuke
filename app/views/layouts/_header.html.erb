<header>
  <nav class="navbar navbar-dark navbar-expand-sm back-color-sub">
    <div class="container">
      <% if admin_signed_in? %>
        <%= link_to 'ポスケ！', admin_companies_path, class: "navbar-brand" %>
      <% elsif employee_signed_in? %>
        <%= link_to 'ポスケ！', schedules_path, class: "navbar-brand" %>
      <% else %>
        <%= link_to 'ポスケ！', root_path, class: "navbar-brand" %>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse"
              data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
              aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
            <li class="nav-item"><%= link_to '企業登録', new_admin_company_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to '企業一覧', admin_companies_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to '問い合わせ一覧', admin_contacts_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'ログアウト', destroy_admin_session_path, class: "nav-link", method: :delete %></li>
          <% elsif employee_signed_in? %>
            <% if admin_employee_login? %>
              <li class="nav-item"><%= link_to '従業員新規登録', new_employee_path, class: "nav-link" %></li>
            <% end %>
            <li class="nav-item"><%= link_to 'スケジュール作成', new_schedule_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'マイページ', employee_path(current_employee), class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'ログアウト', logout_path, class: "nav-link", method: :delete %></li>
          <% else %>
            <li class="nav-item"><%= link_to '管理ページログイン', new_admin_session_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to '従業員ログイン', login_path, class: "nav-link" %></li>
          <% end %>
