<div class="row">
  <%= render 'shared/sidebar' %>
  <div class="col-sm-9">
    <div class="title">
      <h2><i class="fas fa-user-tie icon-color-blue"></i>パスワード編集</h2>
    </div>

    <%= form_with model: @employee, url: employee_update_password_path(@employee), local: true do |f| %>
      <div class="row">
        <div class="col-12">
          <%= f.label :current_password, "現在のパスワード" %>
          <%= render 'shared/error_message', object: f.object, column: :current_password %>
          <%= f.password_field :current_password, class: "form-control mb-3" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= f.label :password, "新しいパスワード" %>
          <%= render 'shared/error_message', object: f.object, column: :password %>
          <%= f.password_field :password, class: "form-control mb-3" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= f.label :password_confirmation, "再確認パスワード" %>
          <%= render 'shared/error_message', object: f.object, column: :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control mb-3" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= f.submit "保存", class: "btn-blue" %>
        </div>
      </div>
    <% end %>
  </div>
</div>