<% if @schedules.blank? %>
  <div class="title">
    <h2><i class="fas fa-question icon-color-blue"></i>検索結果: 0件</h2>
  </div>
<% else %>
  <div class="title">
    <h2><i class="fas fa-question icon-color-blue"></i>検索結果: <%= @schedules.length %>件</h2>
  </div>
  <% @schedules.each do |schedule| %>
    <%= render 'shared/schedule_post', schedule: schedule, cuurent_employee: current_employee %>
  <% end %>
<% end %>