<div class="row">
  <%= render 'shared/sidebar' %>
  <div class="col-sm-9">
    <div class="title">
      <h2><i class="far fa-calendar-alt icon-color-blue"></i>スケジュール編集</h2>
    </div>

    <%= form_with model: @schedule, url: schedule_path, local: true do |f| %>
      <div class="row">
        <div class="col-12">
          <%= f.label :title, "タイトル" %>
          <%= render 'shared/error_message', object: f.object, column: :title %>
          <%= f.text_field :title, autofocus: true, class: "form-control mb-3" %>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <%= f.label :start_time, "開始時間" %>
          <%= render 'shared/error_message', object: f.object, column: :start_time %>
          <%= f.datetime_field :start_time, class: "form-control mb-3" %>
        </div>
        <div class="col-6">
          <%= f.label :end_time, "終了時間" %>
          <%= render 'shared/error_message', object: f.object, column: :end_time %>
          <%= f.datetime_field :end_time, class: "form-control mb-3" %>
        </div>
      </div>
      <div class="row">
      <div class="col-12">
          <%= f.label :content, "内容" %>
          <%= render 'shared/error_message', object: f.object, column: :content %>
          <%= f.text_area :content, class: "form-control mb-3" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= f.label :question, "質問" %>
          <%= render 'shared/error_message', object: f.object, column: :question %>
          <%= f.text_area :question, class: "form-control mb-3" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= f.submit "投稿", class: "btn-blue" %>
        </div>
      </div>
    <% end %>
  </div>
</div>