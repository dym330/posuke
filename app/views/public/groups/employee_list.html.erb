<div class="row">
  <%= render 'shared/sidebar' %>
  <div class="col-sm-9">
    <div class="title">
      <h2><i class="fas fa-users icon-color-blue"></i><%= @group.name %> 従業員一覧</h2>
    </div>
    <%= paginate @employees %>
    <table class="table table-bordered ">
      <thead>
        <tr>
          <th class="table-active" style="width:60%">従業員名</th>
          <th class="table-active" style="width:20%">部署名</th>
          <th class="table-active" style="width:20%">カレンダー</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
          <tr id="employee_id<%= employee.id %>">
            <td class="align-middle">
              <%= link_to employee_path(employee), class: "text-decoration-none" do %>
                <%= attachment_image_tag employee, :image, format: 'jpeg',
                    fallback: "no_image.jpg", size: "50x50", class: "group-employee-image" %>
              <% end %>
              <%= employee.name %>
            </td>
            <td class="align-middle">
              <%= employee.department %>
            </td>
            <td class="align-middle text-center">
              <%= link_to "" , employee_calendars_path(employee), class: "far fa-calendar-alt icon-size-15" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @employees %>
  </div>
</div>