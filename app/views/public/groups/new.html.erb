<div class="row">
  <%= render 'shared/sidebar' %>
  <div class="col-sm-9">
    <div class="title">
      <h2><i class="fas fa-users icon-color-blue"></i>グループ新規作成</h2>
    </div>
    <%= form_with model: @group, local: true do |f| %>
      <div class="row">
        <div class="col-12">
          <%= f.label :name, "名前" %>
          <%= render 'shared/error_message', object: f.object, column: :name %>
          <%= f.text_field :name, autofocus: true, class: "form-control mb-3" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= f.submit "登録", class: "btn-blue" %>
        </div>
      </div>
    <% end %>
  </div>
</div>