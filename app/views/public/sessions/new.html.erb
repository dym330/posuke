<div class="title">
  <h2><i class="far fa-user icon-color-blue"></i>従業員ログイン</h2>
</div>

<div class="row">
  <div class="col-xl-6 col-md-8 col-sm-12 px-sm-0 mx-auto">
    <%= form_with url: login_path, scope: :session, local: true do |f| %>
        <div class="row">
          <div class="col-12">
            <%= f.label :email, "Eメール" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3" %>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <%= f.label :email, "パスワード" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-5" %>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <%= f.submit "ログイン", class: "btn-blue" %>
          </div>
        </div>
    <% end %>
    <%= link_to "ゲストログインはこちら", guest_login_path ,method: :post, class: "btn-blue mt-5" %>
  </div>
</div>